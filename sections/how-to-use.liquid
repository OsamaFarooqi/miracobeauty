      {%- endif -%}
    {%  endfor %} 
  </div>
   
 </div>
</div>  

</div>
</div>    




<div class="compare">
  <div class="container">
    <div class="compare-wrapper">
      <div class="bfr-aft-block">
        <figure class="cd-image-container">
           {%- if section.settings.cmp-aft-img != blank -%}<img src="{{ section.settings.cmp-aft-img | img_url: 'master' }}" alt="Modified Image">{%- else -%}{%- capture current -%}{% cycle 1, 2 %}{%- endcapture -%} {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
             {%- if section.settings.cmp-aft-lbl != blank -%}<span class="cd-image-label" data-type="modified">{{ section.settings.cmp-aft-lbl }}</span>{%- endif -%}
		   <div class="cd-resize-img"> <!-- the resizable image on top -->
             {%- if section.settings.cmp-bfr-img != blank -%}<img src="{{ section.settings.cmp-bfr-img | img_url: 'master' }}" alt="Original Image">{%- else -%}{%- capture current -%}{% cycle 1, 2 %}{%- endcapture -%} {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
           {%- if section.settings.cmp-bfr-lbl != blank -%}<span class="cd-image-label" data-type="original">{{ section.settings.cmp-bfr-lbl }}</span>{%- endif -%}
		   </div>
		<span class="cd-handle"></span>
	    </figure> <!-- cd-image-container -->
      </div>
      <div class="results-det">
        {%- if section.settings.cmp-rst-title != blank -%}<h3 class="rslt-tit">{{ section.settings.cmp-rst-title }}</h3>{%- endif -%}
        {%- if section.settings.cmp-rst-desc != blank -%}<p class="rslt-tit">{{ section.settings.cmp-rst-desc }}</p>{%- endif -%}
        <div class="rslt-imgs">
          <div class="rstimgs-img first">
            {%- if section.settings.aft-rst-img1 != blank -%}<img src="{{ section.settings.aft-rst-img1 | img_url: 'master' }}">{%- else -%}{%- capture current -%}{% cycle 1, 2 %}{%- endcapture -%} {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
            {%- if section.settings.aft-rst-lbl1 != blank -%}<span class="bfr-aft-labl bfr">{{ section.settings.aft-rst-lbl1 }}</span>{%- endif -%}
          </div>
          <div class="rstimgs-img second">
            {%- if section.settings.aft-rst-img2 != blank -%}<img src="{{ section.settings.aft-rst-img2 | img_url: 'master' }}">{%- else -%}{%- capture current -%}{% cycle 1, 2 %}{%- endcapture -%} {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}{%- endif -%}
            {%- if section.settings.aft-rst-lbl2 != blank -%}<span class="bfr-aft-labl bfr">{{ section.settings.aft-rst-lbl2 }}</span>{%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




