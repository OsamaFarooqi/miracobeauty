<div class="howtouse">
  <div class="container">
   <div class="page-title">
      {%- if section.settings.htu-title != blank -%}<h2 class="page-title__heading">{{ section.settings.htu-title }}</h2>{%- endif -%}
  </div>
<div class="howtouse-wrapper">
 <div id="tabs-1" class="howtouse-tabs">
   
  <ul class="howtouse-tabs-menu">
    <li><a href="#cleanser"><span class="htu-step-number">1</span><img src="https://cdn.shopify.com/s/files/1/0588/0260/2167/files/icon-cleanser_9201b529-15fb-43e4-90f4-da52f4a8cd71.svg?v=1706627040"><h5>Cleanser</h5></a></li>
    <li><a href="#toner"><span class="htu-step-number">2</span><img src="https://cdn.shopify.com/s/files/1/0588/0260/2167/files/icon-toner_3c44bb3b-6842-469a-8e58-8fca47399f68.svg?v=1706627041"><h5>Toner</h5></a></li>
    <li><a href="#essence"><span class="htu-step-number">3</span><img src="https://cdn.shopify.com/s/files/1/0588/0260/2167/files/icon-essence_88ddaaaa-75a7-44da-bf33-a055f60a41be.svg?v=1706627041"><h5>Essence</h5></a></li>
    <li><a href="#serum"><span class="htu-step-number">4</span><img src="https://cdn.shopify.com/s/files/1/0588/0260/2167/files/icon-serum_beea1e8f-0a6f-4685-8006-f59432ddd24f.svg?v=1706627041"><h5>Serum</h5></a></li>
    <li><a href="#moisturizer"><span class="htu-step-number">5</span><img src="https://cdn.shopify.com/s/files/1/0588/0260/2167/files/icon-moisturizer_6e62d833-7d4a-4173-9dc8-c68f6cc7fba6.svg?v=1706627041"><h5>Moisturizer</h5></a></li>
  </ul>
   
  <div id="cleanser" class="howtouse-tabs-content">
    {%  for block in section.blocks %}
      {% if block.type == "cleanser" %}
          <div class="htc-step-cont">
          {%- if block.settings.stp-img != blank -%}<img class="htc-step-img"  src="{{ block.settings.stp-img | img_url: 'master' }}">{%- endif -%}
          {%- if block.settings.stp-title != blank -%}<h3>{{ block.settings.stp-title }}</h3>{%- endif -%}
          {%- if block.settings.stp-dsc != blank -%}<p>{{ block.settings.stp-dsc }}</p>{%- endif -%}
          </div>
      {%- endif -%}
    {%  endfor %} 
  </div>
  <div id="toner" class="howtouse-tabs-content">
    {%  for block in section.blocks %}
      {% if block.type == "toner" %}
          <div class="htc-step-cont">
          {%- if block.settings.stp-img != blank -%}<img class="htc-step-img"  src="{{ block.settings.stp-img | img_url: 'master' }}">{%- endif -%}
