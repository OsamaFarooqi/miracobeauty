          {
            "label": "Curved",
            "value": "curved"
          },
          {
            "label": "Straight",
            "value": "straight"
          },
          {
            "label": "None",
            "value": "none"
          }
        ]
      },
      {
        "type": "header",
        "content": "Mobile menu"
      },
      {
        "type": "select",
        "id": "mobile_menu_behaviour",
        "label": "First item in dropdown menu",
        "default": "trigger",
        "options": [
          {
            "label": "Link",
            "value": "link"
          },
          {
            "label": "Link that opens menu",
            "value": "trigger"
          }
        ]
      },
      {
        "type": "header",
        "content": "Animations"
      },
      {
        "type": "checkbox",
        "id": "transition_text",
        "label": "Show text transition",
        "info": "Used for headings, texts and buttons.",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "transition_grid_items",
        "label": "Show grid items transition",
        "info": "Used for products and blog posts.",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "transition_images_fade",
        "label": "Show image fade effect",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "transition_collections_list",
        "label": "Show collection zoom transition",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "parallax_enable",
        "label": "Enable image parallax",
        "info": "Some large images will animate movement opposite to the scroll direction.",
        "default": true
      },
      {
        "type": "range",
        "id": "parallax_strength",
        "min": 0,
        "max": 100,
        "step": 5,
        "label": "Parallax strength",
        "default": 20,
        "info": "Strong parallax will result in image zooming. Lower strength is recommended."
      },
      {
        "type": "header",
        "content": "Pagination"
